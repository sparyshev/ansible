/var/log/rsyslog/tcpdump.log {
    rotate 2
    size=1M
    missingok
    notifempty
    daily
    compress
    delaycompress
    maxage 3
    create 0644 root root
    prerotate
        /usr/bin/systemctl stop named-tcpdump
    endscript
    postrotate
        /usr/bin/systemctl start named-tcpdump
    endscript
}
